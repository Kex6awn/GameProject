@model Battle

@{
    ViewData["Title"] = "Battle Result";
}

<h1>Battle Result</h1>

<p><strong>Team 1:</strong> @Model.Team1.Name</p>
<p><strong>Team 2:</strong> @Model.Team2.Name</p>
<p><strong>Winner:</strong> @Model.WinnerTeam.Name</p>
<p><strong>Date:</strong> @Model.BattleDate</p>

<a asp-action="Index" class="btn btn-primary">Back to Battle</a>
