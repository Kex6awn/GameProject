@model IEnumerable<Team>

@{
    ViewData["Title"] = "Battle";
}

<h1>Battle</h1>

<form asp-action="Fight" method="post">
    <div class="form-group">
        <label for="team1Id">Select Team 1</label>
        <select name="team1Id" class="form-control" required>
            <option value="">-- Select Team --</option>
            @foreach (var team in Model)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="team2Id">Select Team 2</label>
        <select name="team2Id" class="form-control" required>
            <option value="">-- Select Team --</option>
            @foreach (var team in Model)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Fight</button>
</form>